<div class="container-fluid py-4">

  <!-- Page Header -->
  <div class="text-center mb-4">
    <h1 class="display-5 fw-bold text-dark mb-2">
      <% if params[:category_id].present? && @category %>
        <%= @category.name %>
      <% elsif params[:filter] == 'on_sale' %>
        Products On Sale
      <% elsif params[:filter] == 'new' %>
        New Arrivals
      <% elsif params[:filter] == 'recently_updated' %>
        Recently Updated Products
      <% elsif params[:search].present? %>
        Search Results
      <% else %>
        Our Products
      <% end %>
    </h1>
    <p class="text-muted">
      <% if params[:search].present? %>
        Showing results for "<%= params[:search] %>"
      <% else %>
        Quality Nigerian building materials
      <% end %>
    </p>
  </div>

  <!-- Search Bar -->
  <div class="card mb-4">
    <div class="card-body">
      <%= form_with url: category_products_path, method: :get, local: true, class: "row g-3" do %>
        <div class="col-md-5">
          <label class="form-label fw-semibold">üîç Search Products</label>
          <%= text_field_tag :search, params[:search],
              placeholder: "Search by name or description...",
              class: "form-control" %>
        </div>

        <div class="col-md-4">
          <label class="form-label fw-semibold">üìÇ Filter by Category</label>
          <%= select_tag :category_id,
              options_for_select([['All Categories', '']] + @categories.map { |c| [c.name, c.id] }, params[:category_id]),
              class: "form-select" %>
        </div>

        <%= hidden_field_tag :filter, params[:filter] %>

        <div class="col-md-3 d-flex align-items-end gap-2">
          <%= submit_tag "Search", class: "btn btn-primary" %>
          <% if params[:search].present? || params[:category_id].present? %>
            <%= link_to "Clear", products_path, class: "btn btn-secondary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Filter Buttons -->
  <div class="d-flex flex-wrap gap-2 mb-4 justify-content-center">
    <%= link_to products_path(search: params[:search], category_id: params[:category_id]),
        class: "category-pill #{params[:filter].blank? ? 'active' : ''}" do %>
      üì¶ All Products
    <% end %>

    <%= link_to products_path(filter: 'on_sale', search: params[:search], category_id: params[:category_id]),
        class: "category-pill #{params[:filter] == 'on_sale' ? 'active' : ''}" do %>
      üî• On Sale
    <% end %>

    <%= link_to products_path(filter: 'new', search: params[:search], category_id: params[:category_id]),
        class: "category-pill #{params[:filter] == 'new' ? 'active' : ''}" do %>
      ‚ú® New Arrivals
    <% end %>

    <%= link_to products_path(filter: 'recently_updated', search: params[:search], category_id: params[:category_id]),
        class: "category-pill #{params[:filter] == 'recently_updated' ? 'active' : ''}" do %>
      üîÑ Recently Updated
    <% end %>
  </div>

  <!-- Results Count -->
  <% if @products.any? %>
    <div class="text-center text-muted mb-3">
      Showing <strong><%= @products.offset_value + 1 %></strong>
      to <strong><%= [@products.offset_value + @products.limit_value, @products.total_count].min %></strong>
      of <strong><%= @products.total_count %></strong> products
    </div>
  <% end %>

  <!-- Product Grid -->
  <% if @products.any? %>
    <div class="row g-4 mb-4">
      <% @products.each do |product| %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <%= link_to product_path(product), class: "text-decoration-none product-card" do %>
            <div class="card h-100">
              <!-- Image -->
              <div class="position-relative" style="height: 250px; overflow: hidden;">
                <% if product.images.attached? && product.images.first.present? %>
                  <%= image_tag product.images.first,
                                class: "card-img-top product-image",
                                alt: product.name,
                                style: "height: 100%; width: 100%; object-fit: cover;" %>
                <% else %>
                  <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                    <span style="font-size: 4rem;">üì¶</span>
                  </div>
                <% end %>

                <!-- Badges -->
                <div class="position-absolute top-0 start-0 m-2">
                  <% if product.on_sale %>
                    <span class="badge badge-sale mb-1 d-block">SALE</span>
                  <% end %>
                  <% if product.new_arrival || product.created_at > 3.days.ago %>
                    <span class="badge badge-new mb-1 d-block">NEW</span>
                  <% end %>
                  <% if product.stock_quantity <= 5 && product.stock_quantity > 0 %>
                    <span class="badge badge-low mb-1 d-block">LOW STOCK</span>
                  <% elsif product.stock_quantity == 0 %>
                    <span class="badge bg-secondary mb-1 d-block">OUT OF STOCK</span>
                  <% end %>
                </div>
              </div>

              <!-- Card Body -->
              <div class="card-body">
                <h5 class="card-title line-clamp-2 mb-2" style="min-height: 3rem;">
                  <%= product.name %>
                </h5>

                <p class="card-text text-muted small line-clamp-2 mb-3">
                  <%= truncate(product.description, length: 80) %>
                </p>

                <div class="d-flex justify-content-between align-items-center mb-2">
                  <div>
                    <div class="price-display">
                      ‚Ç¶<%= number_with_delimiter(product.price.to_i) %>
                    </div>
                    <div class="small text-muted">
                      Stock: <%= product.stock_quantity %>
                    </div>
                  </div>

                  <span class="btn btn-primary btn-sm">View</span>
                </div>

                <% if product.categories.any? %>
                  <div class="border-top pt-2 mt-2">
                    <div class="small text-muted">
                      <%= product.categories.map(&:name).join(", ") %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Pagination -->
    <% if @products.total_pages > 1 %>
      <nav aria-label="Product pagination">
        <ul class="pagination justify-content-center">

          <li class="page-item <%= 'disabled' unless @products.prev_page %>">
            <% if @products.prev_page %>
              <%= link_to "‚Üê Previous", url_for(params.permit!.merge(page: @products.prev_page)), class: "page-link" %>
            <% else %>
              <span class="page-link">‚Üê Previous</span>
            <% end %>
          </li>

          <% (1..@products.total_pages).each do |page_num| %>
            <% if page_num == @products.current_page %>
              <li class="page-item active"><span class="page-link"><%= page_num %></span></li>
            <% elsif (page_num - @products.current_page).abs <= 2 || page_num == 1 || page_num == @products.total_pages %>
              <li class="page-item">
                <%= link_to page_num, url_for(params.permit!.merge(page: page_num)), class: "page-link" %>
              </li>
            <% elsif (page_num - @products.current_page).abs == 3 %>
              <li class="page-item disabled"><span class="page-link">...</span></li>
            <% end %>
          <% end %>

          <li class="page-item <%= 'disabled' unless @products.next_page %>">
            <% if @products.next_page %>
              <%= link_to "Next ‚Üí", url_for(params.permit!.merge(page: @products.next_page)), class: "page-link" %>
            <% else %>
              <span class="page-link">Next ‚Üí</span>
            <% end %>
          </li>
        </ul>
      </nav>

      <div class="text-center text-muted small">
        Page <%= @products.current_page %> of <%= @products.total_pages %>
      </div>
    <% end %>

  <% else %>
    <!-- Empty State -->
    <div class="text-center py-5">
      <div style="font-size: 5rem;">üîç</div>
      <h2 class="h3 text-muted mb-3">No products found</h2>
      <p class="text-muted mb-4">
        <% if params[:search].present? %>
          No products match your search "<%= params[:search] %>".
        <% elsif params[:filter].present? %>
          No products match this filter.
        <% else %>
          Check back soon for our product listings.
        <% end %>
      </p>
      <%= link_to "View all products", products_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>